

<%if current_user.id == @shoe.user_id %>
<h1>Brand: <%= @shoe.brand %></h1><br>
<h1>Image: <%= image_tag(@shoe.image, size: "100x110") %></h1><br>
<h1>Name: <%= @shoe.name %></h1><br>
<h1>Description: <%= @shoe.description %></h1><br>
<%= render 'rating_comment' %>

<h1><%= link_to "Edit", edit_shoe_path %></h1>
 <h1><%= link_to "Delete", @shoe, method: :delete, data: { confirm: "Really?" } %></h1>
 <% else %>
 <h1>Brand: <%= @shoe.brand %></h1><br>
<h1>Image: <%= image_tag(@shoe.image, size: "100x110") %></h1><br>
<h1>Name: <%= @shoe.name %></h1><br>
<h1>Description: <%= @shoe.description %></h1><br>

<%= render 'rating_comment' %>

 <% end %>
